@model PersonUpdateModel

@{
    ViewData["Title"] = "Update person";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<div>
    <h1 class="display-4 mb-5 text-center">Update person info</h1>
    <div class="row">
        <form asp-controller="Rookies" asp-action="Update" asp-route-index = "@index" method="post" class="col-8 offset-2">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Your first name">
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Your last name">
                <span asp-validation-for="LastName" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Your phone number">
                <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirthPlace" class="form-label"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" placeholder="Your birth place">
                <span asp-validation-for="BirthPlace" class="form-text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-secondary" role="button" asp-controller="Rookies" asp-action="index">Cancel</a>
        </form>
    </div>
</div>
