@model PersonCreateModel

@{
    ViewData["Title"] = "Create new person";
}

<div>
    <h1 class="display-4 mb-5 text-center">Create new person</h1>
    <div class="row">
        <form asp-controller="Rookies" asp-action="Create" method="post" class="col-8 offset-2">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Your first name">
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Your last name">
                <span asp-validation-for="LastName" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select class="form-select" asp-for="Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control">
                <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Your phone number">
                <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirthPlace" class="form-label"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" placeholder="Your birth place">
                <span asp-validation-for="BirthPlace" class="form-text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
